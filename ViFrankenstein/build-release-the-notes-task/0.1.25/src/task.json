{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "084140ea-39bd-11ed-a261-0242ac120002",
    "name": "ReleaseTheNotes",
    "friendlyName": "Release the Notes",
    "description": "Creates release notes from build commits in pipeline",
    "helpMarkDown": "[Learn more about this task](https://aka.ms/AA3aeiw)",
    "category": "Utility",
    "author": "CodeChavez",
    "preview": true,
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 25
    },
    "minimumAgentVersion": "2.0.0",
    "instanceNameFormat": "Release the Notes for $(Build.Repository.Name)",
    "inputs": [
        {
            "name": "ConnectedServiceName",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "label": "Azure subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Resource Manager subscription"
        },
        {
            "name": "ADOBaseUrl",
            "type": "string",
            "label": "Organization",
            "defaultValue": "$(System.CollectionUri)",
            "required": true,
            "helpMarkDown": "Organization name"
        },
        {
            "name": "PAT",
            "type": "string",
            "label": "PAT",
            "defaultValue": "$(System.AccessToken)",
            "required": false
        },
        {
            "name": "RNRepositoryName",
            "type":"string",
            "label": "Repository",
            "defaultValue": "$(Build.Repository.Name)",
            "required": true,
            "helpMarkDown": "Repository name"
        },
        {
            "name": "RNVersion",
            "type": "string",
            "label": "Versioning",
            "defaultValue": "$(Build.BuildNumber)",
            "required": true,
            "helpMarkDown": "Build number set by any versioning mechanism"

        },
        {
            "name": "RNTitle",
            "type": "string",
            "label": "Release title",
            "defaultValue": "Release Notes for $(Build.Repository.Name)",
            "required": true,
            "helpMarkDown": "Enter title for wiki release notes"
        },
        {
            "name": "WikiRoot",
            "label": "Wiki Root",
            "type":"string",
            "defaultValue": "myteam.wiki",
            "required": true,
            "helpMarkDown": "Enter the root wiki name example. Carina.wiki"
        },
        {
            "name": "ReleseWiki",
            "label": "Release Wiki",
            "type": "string",
            "defaultValue": "Releases",
            "required": true,
            "helpMarkDown": "Enter wiki name where release will be creating sub-wikis"

        }
    ],
    "execution": {
        "Node10": {
            "target": "main.js"
        }
    }
}