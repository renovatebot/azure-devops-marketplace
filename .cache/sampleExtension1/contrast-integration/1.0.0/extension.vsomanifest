{
    "manifestVersion": 1,
    "contributions": [
        {
            "id": "contrast-service-endpoint",
            "description": "Service endpoint type for Contrast connections",
            "type": "ms.vss-endpoint.endpoint-types",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "contrast",
                "displayName": "Contrast Server Connection",
                "inputDescriptors": [
                    {
                        "id": "orgId",
                        "name": "Organization UUID",
                        "description": "This is located in the API section in your Organization Settings.",
                        "inputMode": "textbox",
                        "isConfidential": false,
                        "validation": {
                            "isRequired": true,
                            "dataType": "string"
                        }
                    },
                    {
                        "id": "logging",
                        "name": "Logging",
                        "description": "Enable or disable logging.",
                        "inputMode": "checkbox",
                        "defaultValue": false,
                        "isConfidential": false,
                        "validation": {
                            "dataType": "boolean"
                        }
                    }
                ],
                "url": {
                    "displayName": "Contrast URL",
                    "helpText": "This should be the address to your TeamServer (https://{{hostname}}) from which vulnerability data should be retrieved."
                },
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-token",
                        "headers": [
                            {
                                "name": "Authorization",
                                "value": "Basic {{ #base64 endpoint.username \":\" endpoint.apitoken }}"
                            },
                            {
                                "name": "API-Key",
                                "value": "{{endpoint.apikey}}"
                            }
                        ],
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Username",
                                "description": "Your Contrast Username.",
                                "inputMode": "textbox",
                                "isConfidential": false,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "apitoken",
                                "name": "Service key",
                                "description": "This is located at the bottom of your profile settings.",
                                "inputMode": "textbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "apikey",
                                "name": "API Key",
                                "description": "This is located in the API section in your Organization Settings.",
                                "inputMode": "textbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "contrastAssessSecurity",
            "type": "ms.vss-distributed-task.task",
            "properties": {
                "name": "task/contrast-assess-security",
                "uri": "task/contrast-assess-security/task.json"
            }
        }
    ],
    "scopes": [],
    "contributionTypes": []
}