{
    "id": "DC2AE2D3-39BD-4B8A-9515-B708BF733A36",
    "name": "SmokeWebTest",
    "friendlyName": "Smoke Web Test",
    "description": "Simple http request to test response of a service.",
    "author": "Miguel Cruz",
    "category": "Test",
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent",
        "MachineGroup"
    ],
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 0
    },
    "inputs": [
        {
            "name": "url",
            "type": "string",
            "label": "Url",
            "required": true,
            "helpMarkDown": "Url subject to the test."
        },
        {
            "name": "expectedReturnCode",
            "type": "string",
            "label": "Expected Return Code",
            "defaultValue": "200",
            "required": true,
            "helpMarkDown": "Expected HTTP return code.",
        },
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\task.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}
