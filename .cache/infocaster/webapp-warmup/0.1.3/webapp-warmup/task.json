{
    "id": "5a8276ee-2d07-4f08-a3b3-da9052585347",
    "name": "Webapp Warmup",
    "friendlyName": "Webapp Warmup",
    "description": "This task warms-up an webapp by calling it's url",
    "helpMarkDown": "[More Information](https://github.com/luuksommers/vsts-webapp-warmup)",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Luuk Sommers",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 2
    },
    "minimumAgentVersion": "1.95.0",
    "inputs": [
        {
            "name": "Url",
            "type": "string",
            "label": "Url",
            "required": true,
            "helpMarkDown": "Provide the url of the webapp to warmup"
        },
        {
            "name": "RetryCount",
            "type": "string",
            "label": "Retry count",
            "defaultValue": "10",
            "required": false,
            "helpMarkDown": "Provide the number of retries"
        },
        {
            "name": "SleepPeriod",
            "type": "string",
            "label": "Sleep period",
            "defaultValue": "1",
            "required": false,
            "helpMarkDown": "Provide the sleep period in seconds after failure before retry"
        },
        {
            "name": "IgnoreError",
            "type": "boolean",
            "label": "Ignore errors",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Ignore when the webapp has an error and continue (default false)"
        },
        {
            "name": "Suffixes",
            "type": "multiLine",
            "label": "Add multiple site suffixes to warmup (1 suffix per line)",
            "required": false,
            "defaultValue": "/",
            "properties": {
                "resizable": "true",
                "rows": "10",
                "maxLength": "5000"
            },
            "helpMarkDown": "Ignore when the webapp has an error and continue"
        }
    ],
    "instanceNameFormat": "Warmup webapp",
    "execution": {
        "PowerShell3": {
            "target": "$(currentDirectory)\\run-vsts.ps1"
        }
    }
}