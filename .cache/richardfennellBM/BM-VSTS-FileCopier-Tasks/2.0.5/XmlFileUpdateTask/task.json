{
    "id":  "dc3a86bb-803b-4851-afa5-ee708a61cd6f",
    "name":  "XmlFileUpdateTask",
    "friendlyName":  "Update XML file attribute",
    "description":  "Update an attribute in an Xml file based on XPath filter",
    "helpMarkDown":  "Version: 2.0.5. [More Information](https://github.com/rfennell/vNextBuild/wiki/File-Copier-Tasks/)",
    "category":  "Utility",
    "visibility":  [
                       "Build",
                       "Release"
                   ],
    "author":  "Black Marble",
    "version":  {
                    "Major":  2,
                    "Minor":  0,
                    "Patch":  5
                },
    "inputs":  [
                   {
                       "name":  "filename",
                       "type":  "string",
                       "label":  "Filename",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "The file to update e.g: $(SYSTEM.ARTIFACTSDIRECTORY)\\myfile.dll.config"
                   },
                   {
                       "name":  "xpath",
                       "type":  "string",
                       "label":  "Xpath query",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "The Xpath query to select a node e.g: /configuration/appSettings/add[@key=\u0027A variable\u0027]"
                   },
                   {
                       "name":  "attribute",
                       "type":  "string",
                       "label":  "Attribute",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "The attribute name to update e.g. value"
                   },
                   {
                       "name":  "value",
                       "type":  "string",
                       "label":  "Value",
                       "defaultValue":  "",
                       "required":  true,
                       "helpMarkDown":  "The new value to set e.g. \u0027new value\u0027"
                   }
               ],
    "minimumAgentVersion":  "1.82.0",
    "instanceNameFormat":  "XmlFileUpdateTask",
    "execution":  {
                      "PowerShell":  {
                                         "target":  "$(currentDirectory)\\FileUpdate.ps1",
                                         "argumentFormat":  "",
                                         "workingDirectory":  "$(currentDirectory)"
                                     }
                  }
}