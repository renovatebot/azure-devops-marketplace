    "name": "nsis",
    "friendlyName": "Nsis",
    "description": "Run Nsis",
    "helpMarkDown": "Run Nsis [More Information](https://github.com/dev-maxima/nsis-extension)",
    "category": "Build",
    "author": "bizeta",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 1
    },
    "links": {
        "home": {
            "uri": "https://github.com/dev-maxima/nsis-extension"
        },
        "repository": {
            "uri": "https://github.com/dev-maxima/nsis-extension"
        },
        "issues": {
            "uri": "https://github.com/dev-maxima/nsis-extension/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/dev-maxima/nsis-extension"
    },
    "badges": [
        {
            "href": "https://github.com/dev-maxima/nsis-extension",
            "uri": "https://tomap.visualstudio.com/_apis/public/build/definitions/6d190468-0f5e-4624-9d49-8446c00b4b51/1/badge",
            "description": "VSTS build for the project"
        }
    ],
    "minimumAgentVersion": "2.0.0",
    "instanceNameFormat": "Nsis",
    "inputs": [
        {
            "name": "scriptFile",
            "type": "filePath",
            "label": ".nsi script file",
            "defaultValue": "install.nsi",
            "helpMarkDown": "Path to the .nsi script file.",
            "required": "true"
        },
        {
            "name": "arguments",
            "type": "string",
            "label": "Arguments",
            "defaultValue": "",
            "helpMarkDown": "arguments to makensis.exe",
            "required": "false"
        },
        {
            "name": "justInclude",
            "type": "radio",
            "label": "Just Include",
            "defaultValue": "no",
            "helpMarkDown": "Should we just include Nsis as an environment variable without executing?",
            "required": "true",
            "options": {
                "yes": "yes",
                "no": "no"
            }
        },
        {
            "name": "includeMorePlugins",
            "type": "radio",
            "label": "Include additional plugins",
            "defaultValue": "no",
            "helpMarkDown": "Should we also add more Nsis plugins to the plugin folder?",
            "required": "true",
            "options": {
                "yes": "yes",
                "no": "no"
            }
        },
        {
            "name": "includeCustomPluginsPath",
            "type": "filePath",
            "label": "Custom Plugins Path",
            "defaultValue": "",
            "helpMarkDown": "If you want include additional plugins that aren't in our defualt directory, you could specify your plugin directory so your plugins will copied and used into NSIS process. This will work with plugins/x86-ansi",
            "required": "false"
        }

    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\Nsis.ps1",
            "argumentFormat": "",
            "workingDirectory": "",
            "platforms": [
                "windows"
            ]
        }
    }
}
