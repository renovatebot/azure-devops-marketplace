{
    "manifestVersion": 1,
    "scopes": [
        "vso.work"
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/mchalepage/azure-devops-extension-url-field"
    },
    "contributions": [
        {
            "id": "url-field-plus",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "Enhanced work item custom control for clickable and editable URLs.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "URL Field +",
                "description": "Enhanced work item custom control for clickable and editable URLs.",
                "uri": "index.html",
                "height": "33",
                "inputs": [
                    {
                        "id": "Url",
                        "name": "URL",
                        "description": "Provide an URL for a new link. Use {field} to include a value from a field selected below.",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "Title",
                        "name": "Title",
                        "description": "Show a title instead of a full URL.",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "Field",
                        "name": "Field",
                        "description": "Select a field for a variable to be used in URL building. For editable URLs, use a multi-line text field to avoid 255 character limit.",
                        "type": "WorkitemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "String",
                                "Integer",
                                "Double",
                                "PlainText",
                                "HTML"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "HideUrlIfEmptyField",
                        "name": "Hide if empty Field (true/false)",
                        "description": "Hide the URL when Field value is empty (true/false)",
                        "validation": {
                            "dataType": "Boolean",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "EditableField",
                        "name": "Editable URL Field (true/false)",
                        "description": "When true, allows users to directly enter/edit URLs in this control without needing a separate field. The Field parameter must be set to store the URL value.",
                        "validation": {
                            "dataType": "Boolean",
                            "isRequired": false
                        }
                    }
                ]
            }
        }
    ],
    "contributionTypes": []
}