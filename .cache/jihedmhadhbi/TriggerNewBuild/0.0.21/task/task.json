{
    "id": "ccbd79fd-88a5-453d-8fb9-56c69b3a643f",
    "name": "TriggerNewBuild",
    "friendlyName": "Trigger New Build",
    "description": "Trigger a new Build",
    "helpMarkDown": "",
    "category": "Build",
    "author": "Jihed Mhadhbi",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Trigger new Build for $(ConnectedServiceName)",
    "inputs": [
        {
            "name": "ConnectedServiceName",
            "type": "connectedService:vstsApi",
            "label": "VSTS connection",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "VSTS connection"
        },
        {
            "name": "project",
            "type": "pickList",
            "label": "Project",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the name of the team project.",
            "properties": {
                "EditableOptions": "True"
            }
        },
        {
            "name": "buildDefinition",
            "type": "pickList",
            "label": "Build Definition",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the name of the Build.",
            "properties": {
                "EditableOptions": "True"
            }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "project",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "projects",
            "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
        },
        {
            "target": "buildDefinition",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "buildDefinitions",
            "parameters": {
                "project": "$(project)"
            },
            "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}