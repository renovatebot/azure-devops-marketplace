{
    "id": "1ba72b0a-f476-4a91-90a0-b8e7a0cc4338",
    "name": "PaketRestoreTask",
    "friendlyName": "Paket Restore",
    "description": "Restores packages from your Paket file.",
    "helpMarkDown": "None",
    "category": "Package",
    "author": "Isaac Abraham",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "minimumAgentVersion": "1.83.0",
    "groups": [
        {
            "name":"advanced",
            "displayName":"Advanced",
            "isExpanded":false
        }
    ],    
    "instanceNameFormat": "Restore Paket dependencies",
    "inputs": [
        {
            "name": "PaketBootstrapperPath",
            "type": "filePath",
            "label": "Folder containing Paket Bootstrapper",
            "defaultValue":".paket",
            "helpMarkDown": "The folder that contains the Paket Bootstrapper",
            "required":"true"
        }
    ],
    "execution": {
        "Process": {
            "target": "$(PaketBootstrapperPath)\\Paket.bat",
            "workingDirectory": "$(Build.SourcesDirectory)"
        }
    }
}