{
    "id":  "aa82002e-1cfd-4107-9d6c-6654551312b1",
    "name":  "dbmaestro-upgrade",
    "friendlyName":  "DBmaestro Upgrade",
    "description":  "Queues Upgrade Environment Job to DBmaestro Database Release Automation.",
    "category":  "Release",
    "visibility":  [
                       "Build",
                       "Release"
                   ],
    "author":  "DBmaestro",
    "command":  "Upgrade",
    "version":  {
                    "Major":  "21",
                    "Minor":  "4",
                    "Patch":  "1"
                },
    "instanceNameFormat":  "DBmaestro Upgrade $(environmentName)",
    "groups":  [
                   {
                       "name":  "automationSettings",
                       "displayName":  "Automation Settings",
                       "isExpanded":  false
                   }
               ],
    "inputs":  [
                   {
                       "name":  "projectName",
                       "type":  "string",
                       "label":  "Project Name",
                       "defaultValue":  "",
                       "required":  true,
                       "switch":  "ProjectName"
                   },
                   {
                       "name":  "environmentName",
                       "type":  "string",
                       "label":  "Environment Name",
                       "defaultValue":  "",
                       "required":  true,
                       "switch":  "EnvName"
                   },
                   {
                       "name":  "packageName",
                       "type":  "string",
                       "label":  "Package Name",
                       "defaultValue":  "",
                       "required":  true,
                       "switch":  "PackageName"
                   },
                   {
                       "name":  "backupBehavior",
                       "type":  "pickList",
                       "label":  "Backup before upgrade",
                       "defaultValue":  "SkipCreatingBackup",
                       "required":  false,
                       "helpMarkDown":  "Please Select Version Type",
                       "options":  {
                                       "AlwaysCreateBackup":  "Always Create Backup",
                                       "UsePolicy":  "Use Policy",
                                       "SkipCreatingBackup":  "Skip Creating Backup"
                                   },
                       "switch":  "BackupBehavior"
                   },
                   {
                       "name":  "restoreBehavior",
                       "type":  "pickList",
                       "label":  "Restore from backup on error",
                       "defaultValue":  "SkipRestore",
                       "required":  false,
                       "helpMarkDown":  "Please Select Version Type",
                       "options":  {
                                       "AlwaysRestore":  "Restore on failure",
                                       "SkipRestore":  "Never restore"
                                   },
                       "switch":  "RestoreBehavior"
                   },
                   {
                       "name":  "useSSL",
                       "type":  "bool",
                       "label":  "Use SSL",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "automationSettings",
                       "helpMarkDown":  "Requests to use SSL/Https protocol to connect to the agent \u003cy | n\u003e"
                   },
                   {
                       "name":  "jarPath",
                       "type":  "string",
                       "label":  "DBmaestro Agent Jar Path",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "automationSettings",
                       "helpMarkDown":  "Location of executable jar of DBmaestro Agent."
                   },
                   {
                       "name":  "server",
                       "type":  "string",
                       "label":  "DBmaestro Server",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "automationSettings",
                       "helpMarkDown":  "Host:Port of DBmaestro server."
                   },
                   {
                       "name":  "authType",
                       "type":  "string",
                       "label":  "Authorization Type",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "automationSettings",
                       "helpMarkDown":  "Authentication method for login to DBmaestro agent - account | domain."
                   },
                   {
                       "name":  "userName",
                       "type":  "string",
                       "label":  "User Name",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "automationSettings",
                       "helpMarkDown":  "Authentication user name."
                   },
                   {
                       "name":  "password",
                       "type":  "string",
                       "label":  "Password",
                       "defaultValue":  "",
                       "required":  false,
                       "groupName":  "automationSettings",
                       "helpMarkDown":  "Authentication password (password or automation token)."
                   }
               ],
    "execution":  {
                      "PowerShell3":  {
                                          "target":  "$(currentDirectory)\\index.ps1",
                                          "argumentFormat":  "",
                                          "workingDirectory":  "$(currentDirectory)"
