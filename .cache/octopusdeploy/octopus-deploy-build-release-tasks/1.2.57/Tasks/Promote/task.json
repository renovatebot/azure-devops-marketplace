                   {
                       "name":  "advanced",
                       "displayName":  "Advanced Options",
                       "isExpanded":  false
                   }
               ],
    "inputs":  [
                   {
                       "name":  "ConnectedServiceName",
                       "type":  "connectedService:Generic",
