{
  "id": "4FA3AAC0-0020-4832-9089-9979C9DD3E69",
  "name": "Bower",
  "friendlyName": "Bower",
  "description": "A package manager for the web",
  "helpMarkDown": "[More Information](https://marketplace.visualstudio.com/items?itemName=touchify.vso-bower) [Bower](http://bower.io)",
  "category": "Package",
  "author": "Touchify",
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 5
  },
  "demands": [
    "node.js"
  ],
  "minimumAgentVersion": "1.91.0",
  "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
  ],
  "instanceNameFormat": "bower $(command)",
  "inputs": [
    {
      "name": "command",
      "type": "string",
      "label": "Bower command",
      "defaultValue": "install",
      "helpMarkDown": "Bower command to run.",
      "required": true
    },
    {
      "name": "arguments",
      "type": "string",
      "label": "Arguments",
      "defaultValue": "",
      "helpMarkDown": "Additional arguments passed to bower.  '--config.interactive=false' is not needed.",
      "groupName": "advanced",
      "required": false
    },
    {
      "name": "bowerjson",
      "type": "filePath",
      "label": "Bower JSON Path",
      "defaultValue": "bower.json",
      "helpMarkDown": "Relative path from repo root of the bower JSON configuration file.",
      "groupName": "advanced",
      "required": true
    },
    {
      "name": "bowerRuntime",
      "type": "string",
      "label": "bower CLI location",
      "defaultValue": "node_modules/bower/bin/bower",
      "helpMarkDown": "Optional.  bower to run.  When agent can't find this bower runtime nor global installed one, it will install bower locally before run (slower).",
      "groupName": "advanced",
      "required": false
    }
  ],
  "execution": {
    "Node": {
      "target": "bowertask.js",
      "argumentFormat": ""
    }
  },
  "messages": {
    "BowerReturnCode": "Bower exited with return code: %d",
    "BowerFailed": "Bower failed with error: %s"
  }
}