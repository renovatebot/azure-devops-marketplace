{
    "id": "e340e148-3bf6-4ee5-93ef-ff93ffc16f67",
    "name": "Get App Keys",
    "friendlyName": "Get App Keys",
    "description": "Get App Keys",

    "helpMarkDown": "",
    "category": "Build, Release",
    "author": "Ajeet Chouksey",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 1
    },
    "minimumAgentVersion": "2.131.0",
    "instanceNameFormat": "AppKeys",
    "demands": ["azureps"],
   
    "inputs": [{
        "name": "ConnectedServiceName",
        "type": "connectedService:AzureRM",
        "label": "AzureRM Subscription",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "Select the AzureRM Subscription that contains the AzureRM App Service"
    },
    {
        "name": "resourceGroup",
        "type": "pickList",
        "label": "Resource Group",
        "defaultValue": "",
        "required": true,
        "properties": {
            "EditableOptions": "True"
        },
        "helpMarkDown": "Select AzureRM Resource Group that contains the AzureRM App Service"
    },
    {
        "name": "functionAppName",
        "type": "pickList",
        "label": "Azure App Name",
        "defaultValue": "",
        "required": true,
        "properties": {
            "EditableOptions": "True"
        },
        "helpMarkDown": "Select the AzureRM App Name."
    },
    {
        "name": "slotName",
        "type": "pickList",
        "label": "Slot",
        "defaultValue": "",
        "required": false,
        "properties": {
            "EditableOptions": "True"
        },
        "helpMarkDown": "Select the slot to configure, or leave empty to use the default, production slot."
    }
],
"dataSourceBindings": [
    {
        "target": "resourceGroup",
        "endpointId": "$(ConnectedServiceName)",
        "dataSourceName": "AzureRMWebAppResourceGroup"            
    },
    {
        "target": "functionAppName",
        "endpointId": "$(ConnectedServiceName)",
        "dataSourceName": "AzureRMWebAppNames",
        "parameters": {
            "ResourceGroupName": "$(resourceGroup)"
        }
    },
        {
            "target": "slotName",
            "endpointId": "$(ConnectedServiceName)",
            "dataSourceName": "AzureRMWebAppSlotsId",
            "parameters": {
                "ResourceGroupName": "$(resourceGroup)",
                "WebAppName": "$(functionAppName)"
            },
            "resultTemplate": "{\"Value\":\"{{{ #extractResource slots}}}\",\"DisplayValue\":\"{{{ #extractResource slots}}}\"}"
        }
    
    

],
    "execution": {
        "PowerShell3": {
            "target": "AppKeys.ps1",
            "argumentFormat": "",
            "workingDirectory": "",
            "platforms": [
                "windows"
            ]
        }
    }
}