  },
  "instanceNameFormat": "Prepare analysis",
  "inputs": [
    {
      "name": "serviceEndpoint",
      "type": "connectedService:oak9",
      "label": "Service Endpoint",
      "required": false,
      "helpMarkDown": "Select the service endpoint for your project. To create one, click the Manage link and create a new Service Endpoint, enter your Organization ID and API token."
    },
    {
      "name": "projectName",
      "type": "string",
      "label": "Project ID",
      "required": false,
      "helpMarkDown": "oak9 project ID"
    },
    {
      "name": "qualityGate",
      "type": "pickList",
      "label": "Fail builds depending on severity",
      "required": true,
      "defaultValue": "Critical",
      "options": {
        "High": "High",
        "Moderate": "Moderate",
        "Low": "Low",
        "None": "None"
      },
      "properties": {
          "EditableOptions": "False"
      }
    },
    {
      "name": "pollingTimeoutSec",
      "type": "string",
      "label": "Timeout (s)",
      "defaultValue": "300",
      "required": true,
      "helpMarkDown":
        "This task will poll the oak9 server until the analysis is completed, or until the timeout is reached. It also adds a build property with the quality gate status of the current build(s) analysis."
    }

  ],
  "execution": {
    "Node10": {
      "target": "index.js"
    }
  }
