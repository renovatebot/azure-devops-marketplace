{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "2ddea4bd-453d-4216-a87a-24b4cb44a262",
    "name": "sendemail",
    "friendlyName": "Send Email without SMTP config",
    "description": "The task can send email to Team members without SMTP configuration",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Tanmoy Dalui",
    "runsOn": ["Server", "Agent"], 
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "visibility": [
        "Build",
        "Release"
    ],
    "instanceNameFormat": "Sent email with subject '$(emailSubject)'",
    "groups": [
        {
            "name": "inputGroup",
            "displayName": "Email Parameters",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "emailToAddress",
            "type": "identities",
            "label": "Email To Address",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Search and select email To user(s).",
            "groupName": "inputGroup"
        },
        {
            "name": "emailCcAddress",
            "type": "identities",
            "label": "Email CC Address",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Search and select email To user(s).",
            "groupName": "inputGroup"
        },
        {
            "name": "emailSubject",
            "type": "string",
            "label": "Email Subject",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Email subject",
            "groupName": "inputGroup"
        },
        {
            "name": "emailBody",
            "type": "multiLine",
            "label": "Email Body",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Email body content",
            "groupName": "inputGroup"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "Powershell-task.ps1"
        }
    }
}