{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "731afec8-1e8d-45e8-9a3f-5839afeb1de8",
  "name": "phrase-download-task",
  "friendlyName": "Phrase Download Task",
  "description": "Task that helps download resource files from phrase.com",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "Rafa≈Ç Nowosielski <rafal@nowosielski.email>",
  "version": {
    "Major": 0,
    "Minor": 7,
    "Patch": 0
  },
  "instanceNameFormat": "Download file $(resourceFileName)",
  "inputs": [
    {
      "name": "phraseToken",
      "type": "string",
      "label": "Token for phrase.com",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify your token for accessing phrase.com APIs"
    },
    {
      "name": "phraseProject",
      "type": "string",
      "label": "Project on phrase.com",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify id of the project on phrase.com"
    },
    {
      "name": "phraseProjectLocale",
      "type": "string",
      "label": "Locale in the project on phrase.com",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify id of the locale in the project on phrase.com"
    },
    {
      "name": "phraseProjectFallbackLocale",
      "type": "string",
      "label": "Fallbqack locale in the project on phrase.com",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Specify id of the fallback locale in the project on phrase.com"
    },
    {
      "name": "resourceFileName",
      "type": "string",
      "label": "Name of the resource file",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify the output name of the resource file"
    },
    {
      "name": "resourceType",
      "type": "pickList",
      "label": "Resource type",
