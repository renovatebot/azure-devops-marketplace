{
    "id": "D57AB29A-BE69-431F-8523-E4BD1B170EB9",
    "name": "ExternalGitWIIntegration",
    "friendlyName": "External Git WorkItem Integration",
    "description": "This task allows you to associate external git changes with Work Item defined in a comment of a last commit",
    "helpMarkDown": "This task allows you to associate external git changes with Work Item defined in a comment of a last commit",
    "author": "Gabriele Mazzocca",
    "category": "Build",
    "visibility": [
        "Build"
    ],
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 10
    },
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "demands": [
        "DotNetFramework"
    ],
    "instanceNameFormat": "External Git WorkItem Integration",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "VSTSUrl",
            "type": "string",
            "label": "Url Visual Studio Team Service",
            "defaultValue": "vsts-server-url",
            "required": true,
            "helpMarkDown": "The url of VSTS (ex. https://<ACCOUNT>.visualstudio.com)"
        },
		{
            "name": "Location",
            "type": "filePath",
            "label": "Working folder",
            "defaultValue": "target",
            "required": true,
            "helpMarkDown": "Target folder where to save the created DLL. The DLL must be discoverable by the test agent."
        },
		{
            "name": "token",
            "type": "string",
            "label": "PAT for VSTS",
            "defaultValue": "vsts-server-token",
            "required": true,
            "helpMarkDown": "personal access token for Visual Studio Team Service"
        }
    ],
    "execution": {
         "PowerShell3": {
            "target": "run.ps1",          
            "failOnStandardError": "$(failOnStandardError)"
        }
    }

}