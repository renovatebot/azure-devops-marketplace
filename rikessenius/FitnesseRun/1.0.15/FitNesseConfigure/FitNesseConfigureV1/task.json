{
    "id":  "51813574-d846-4f39-8cd3-ea20a1296ca4",
    "name":  "FitNesseConfigure",
    "friendlyName":  "Configure FitNesse",
    "description":  "Configure FitNesse for FitSharp so it can be used to execute tests",
    "author":  "Rik Essenius",
    "helpMarkDown":  "Version 1.0.15",
    "category":  "Azure Pipelines",
    "demands":  [

                ],
    "version":  {
                    "Major":  1,
                    "Minor":  0,
                    "Patch":  15
                },
    "minimumAgentVersion":  "1.95.0",
    "instanceNameFormat":  "FitNesseDeploy",
    "groups":  [
                   {
                       "name":  "all",
                       "displayName":  "Common",
                       "isExpanded":  true
                   }
               ],
    "inputs":  [
                   {
                       "name":  "targetFolder",
                       "type":  "filePath",
                       "label":  "Target Folder",
                       "defaultValue":  ".",
                       "required":  false,
                       "helpMarkDown":  "Data folder for FitNesse, where FitNesseRoot and fixtures are expected",
                       "groupName":  "all"
                   },
                   {
                       "name":  "port",
                       "type":  "string",
                       "label":  "Desired port",
                       "defaultValue":  "9123",
                       "required":  false,
                       "helpMarkDown":  "Desired port to run the FitNesse instance on",
                       "groupName":  "all"
                   },
                   {
                       "name":  "slimPort",
                       "type":  "string",
                       "label":  "SLIM Port",
                       "defaultValue":  "8085",
                       "required":  false,
                       "helpMarkDown":  "Port for the SLIM server",
                       "groupName":  "all"
                   },
                   {
                       "name":  "slimPoolSize",
                       "type":  "string",
                       "label":  "SLIM Pool Size",
                       "defaultValue":  "5",
                       "required":  false,
                       "helpMarkDown":  "Pool size for SLIM server (starts from SLIM Port)",
                       "groupName":  "all"
                   },
                   {
                       "name":  "slimTimeout",
                       "type":  "string",
                       "label":  "SLIM Timeout",
                       "defaultValue":  "30",
                       "required":  false,
                       "helpMarkDown":  "Timeout for the SLIM server in seconds.",
                       "groupName":  "all"
                   },
                   {
                       "name":  "unblockPorts",
                       "type":  "boolean",
                       "label":  "Unblock Ports",
                       "defaultValue":  "false",
                       "required":  false,
                       "helpMarkDown":  "Open firewall to allow incoming traffic on the FitNesse/FitSharp ports",
                       "groupName":  "all"
                   }
               ],
    "execution":  {
                      "PowerShell3":  {
                                          "target":  "FitNesseConfigure.ps1",
                                          "argumentFormat":  "",
                                          "workingDirectory":  "$(workingFolder)"
                                      }
                  }
}
